{% extends 'MyTreneoBundle::layout.html.twig' %}

{% block title %}Treneo - karta ogłoszenia{% endblock %}

{% block content %}
Ogłoszenie:
    <p>{{ offer.name }}</p>
    <p>{{ offer.surname }}</p>
    <p>{{ offer.phone }}</p>
    <p><a href="http://{{ offer.site }}">{{ offer.site }}</a></p>
    {% for comment in offer.comments %}
        <div>{{ comment.email }} : {{ comment.content }}</div>
    {% endfor %}
    <form action="{{ path("_comment_add", {"offer_id":offer.id}) }}" method="POST" {{ form_enctype(form) }}>
        {{ form_widget(form) }}
        <p><input type="submit" value="Dodaj komentarz"></p>
    </form>
{% endblock %}
